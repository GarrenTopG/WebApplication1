@using WebApplication1.Models
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Lecturer Dashboard";
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="en">
<head>. 
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .status-pending {
            background-color: #fff3cd;
        }
        /* Yellow */
        .status-approved {
            background-color: #d4edda;
        }
        /* Green */
        .status-rejected {
            background-color: #f8d7da;
        }
        /* Red */
        .dashboard-header {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">CMCS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <span class="nav-link active">Welcome, @username!</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="dashboard-header text-center">
            <h2>Lecturer Dashboard</h2>
            <p>Manage your monthly claims efficiently.</p>
        </div>

        <div class="mb-3 d-flex justify-content-between">
            <a class="btn btn-success" asp-controller="Claims" asp-action="Create">Submit New Claim</a>
            <a class="btn btn-info" asp-controller="Claims" asp-action="Index">Track Your Claims</a>
            <a class="btn btn-secondary" asp-controller="Claims" asp-action="UploadDocument">Upload Supporting Document</a>
        </div>

        <h4>Your Recent Claims</h4>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Claim ID</th>
                    <th>Date Submitted</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Status</th>
                    <th>Notes</th>
                    <th>Documents</th>
                </tr>
            </thead>
            <tbody>
                @* Replace the following with a loop through your model of claims *@
                @* Example: foreach (var claim in Model.Claims) { ... } *@
                <tr class="status-pending">
                    <td>1</td>
                    <td>2025-10-23</td>
                    <td>40</td>
                    <td>R500</td>
                    <td>Pending</td>
                    <td>First claim</td>
                    <td><a href="#">View</a></td>
                </tr>
                <tr class="status-approved">
                    <td>2</td>
                    <td>2025-09-20</td>
                    <td>35</td>
                    <td>R450</td>
                    <td>Approved</td>
                    <td>Monthly submission</td>
                    <td><a href="#">View</a></td>
                </tr>
                <tr class="status-rejected">
                    <td>3</td>
                    <td>2025-08-15</td>
                    <td>30</td>
                    <td>R400</td>
                    <td>Rejected</td>
                    <td>Incorrect hours</td>
                    <td><a href="#">View</a></td>
                </tr>
            </tbody>
        </table>
    </div>

    <footer class="footer mt-4 py-3 bg-light text-center">
        &copy; 2025 CMCS. All Rights Reserved.
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

