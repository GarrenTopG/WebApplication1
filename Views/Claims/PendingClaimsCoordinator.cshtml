@model IEnumerable<WebApplication1.Models.Claim>
@{
    ViewData["Title"] = "Pending Claims - Coordinator";
}

<h1>Pending Claims (Coordinator)</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by lecturer or notes..." />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Submitted At</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @await Html.PartialAsync("_ClaimsTableRows", Model)
    </tbody>
</table>
