@model IEnumerable<WebApplication1.Models.PendingClaimViewModel>

@{
    ViewData["Title"] = "Pending Claims";
    var role = "";
    if (User.IsInRole("Coordinator")) role = "Coordinator";
    else if (User.IsInRole("Manager")) role = "Manager";
    else if (User.IsInRole("HR")) role = "HR";
}

<h1>Pending Claims</h1>

<!-- Legend for flags -->
<div class="mb-3">
    <span class="badge bg-warning text-dark me-2">⚠️ Hourly rate or total hours issue</span>
    <span class="badge bg-danger me-2">❌ Duplicate claim</span>
</div>

<!-- Link to All Claims (ReadOnly Index) -->
<a asp-action="ReadOnlyIndex" class="btn btn-secondary mb-3">View All Claims</a>

<!-- Search -->
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by lecturer or notes..." />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</form>

<!-- Claims Table -->
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Submitted At</th>
            <th>Status</th>
            <th>Flags</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vm in Model)
        {
            var rowClass = "";
            var flags = new List<string>();

            // Only Coordinator has Verification results
            if (vm.Verification != null)
            {
                if (vm.Verification.DuplicateClaim)
                {
                    rowClass = "table-danger";
                    flags.Add("❌ Duplicate");
                }
                if (!vm.Verification.HourlyRateValid)
                {
                    rowClass = rowClass == "" ? "table-warning" : rowClass;
                    flags.Add("⚠️ Hourly rate");
                }
                if (!vm.Verification.TotalHoursValid)
                {
                    rowClass = rowClass == "" ? "table-warning" : rowClass;
                    flags.Add("⚠️ Total hours");
                }
            }

            <tr class="@rowClass">
                <td>@vm.Claim.LecturerName</td>
                <td>@vm.Claim.HoursWorked</td>
                <td>@vm.Claim.HourlyRate</td>
                <td>@vm.Claim.TotalAmount</td>
                <td>@vm.Claim.SubmittedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>@vm.Claim.Status</td>
                <td>@string.Join(", ", flags)</td>
                <td>
                    @* Role-based action buttons *@
                    @if (role == "Coordinator")
                    {
                        if (vm.Claim.Status == WebApplication1.Models.ClaimStatus.Submitted)
                        {
                            <form asp-action="SetUnderReview" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@vm.Claim.Id" />
                                <button type="submit" class="btn btn-warning btn-sm me-1">Under Review</button>
                            </form>
                            <form asp-action="SendBack" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@vm.Claim.Id" />
                                <button type="submit" class="btn btn-danger btn-sm me-1">Send Back</button>
                            </form>
                        }
                    }
                    else if (role == "Manager")
                    {
                        if (vm.Claim.Status == WebApplication1.Models.ClaimStatus.UnderReview)
                        {
                            <a asp-action="Approve" asp-route-id="@vm.Claim.Id" class="btn btn-success btn-sm me-1">Approve</a>
                            <a asp-action="Reject" asp-route-id="@vm.Claim.Id" class="btn btn-danger btn-sm me-1">Reject</a>
                        }
                    }
                    else if (role == "HR")
                    {
                        if (vm.Claim.Status == WebApplication1.Models.ClaimStatus.Approved)
                        {
                            <a asp-action="MarkProcessed" asp-route-id="@vm.Claim.Id" class="btn btn-primary btn-sm">Process</a>
                        }
                    }

                    <a asp-action="Details" asp-route-id="@vm.Claim.Id" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p class="text-muted">No pending claims found.</p>
}
