@model IEnumerable<(WebApplication1.Models.Claim claim, WebApplication1.Services.VerificationResult result)>

@{
    ViewData["Title"] = "Pending Claims";
}

<h1>Pending Claims</h1>

<!-- Legend for flags -->
<div class="mb-3">
    <span class="badge bg-warning text-dark me-2">⚠️ Hourly rate or total hours issue</span>
    <span class="badge bg-danger me-2">❌ Duplicate claim</span>
</div>

<!-- Link to All Claims (ReadOnly Index) -->
<a asp-action="ReadOnlyIndex" class="btn btn-secondary mb-3">View All Claims</a>

<!-- Search -->
<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by lecturer or notes..." />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</form>

<!-- Claims Table -->
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Submitted At</th>
            <th>Status</th>
            <th>Flags</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            // Determine row class and icons based on verification result
            var rowClass = "";
            var flags = new List<string>();

            if (item.result.DuplicateClaim)
            {
                rowClass = "table-danger"; // red for duplicates
                flags.Add("❌ Duplicate");
            }
            if (!item.result.HourlyRateValid)
            {
                rowClass = rowClass == "" ? "table-warning" : rowClass;
                flags.Add("⚠️ Hourly rate");
            }
            if (!item.result.TotalHoursValid)
            {
                rowClass = rowClass == "" ? "table-warning" : rowClass;
                flags.Add("⚠️ Total hours");
            }

            <tr class="@rowClass">
                <td>@item.claim.LecturerName</td>
                <td>@item.claim.HoursWorked</td>
                <td>@item.claim.HourlyRate</td>
                <td>@item.claim.TotalAmount</td>
                <td>@item.claim.SubmittedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.claim.Status</td>
                <td>@string.Join(", ", flags)</td>
                <td>
                    @* Role-based action buttons *@
                    @if (User.IsInRole("Coordinator"))
                    {
                        if (item.claim.Status == WebApplication1.Models.ClaimStatus.Submitted)
                        {
                            <a asp-action="SetUnderReview" asp-route-id="@item.claim.Id" class="btn btn-warning btn-sm me-1">Under Review</a>
                            <a asp-action="SendBack" asp-route-id="@item.claim.Id" class="btn btn-danger btn-sm me-1">Send Back</a>
                        }
                    }
                    else if (User.IsInRole("Manager"))
                    {
                        if (item.claim.Status == WebApplication1.Models.ClaimStatus.UnderReview)
                        {
                            <a asp-action="Approve" asp-route-id="@item.claim.Id" class="btn btn-success btn-sm me-1">Approve</a>
                            <a asp-action="Reject" asp-route-id="@item.claim.Id" class="btn btn-danger btn-sm me-1">Reject</a>
                        }
                    }
                    else if (User.IsInRole("HR"))
                    {
                        if (item.claim.Status == WebApplication1.Models.ClaimStatus.Approved)
                        {
                            <a asp-action="MarkProcessed" asp-route-id="@item.claim.Id" class="btn btn-primary btn-sm">Process</a>
                        }
                    }
                    <a asp-action="Details" asp-route-id="@item.claim.Id" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p class="text-muted">No pending claims found.</p>
}
