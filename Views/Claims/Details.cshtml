@model WebApplication1.Models.Claim

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Claim</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LecturerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LecturerName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoursWorked)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoursWorked)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HourlyRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HourlyRate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubmittedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubmittedAt)
        </dd>
    </dl>
</div>

<!-- Supporting Documents -->
@if (Model?.Documents != null && Model.Documents.Any())
{
    <h4>Supporting Documents</h4>
    <ul>
        @foreach (var doc in Model.Documents)
        {
            <li>
                <a href="@doc.FilePath" target="_blank">@doc.FileName</a>
            </li>
        }
    </ul>
}
else
{
    <p><em>No supporting documents uploaded.</em></p>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@if (Model?.Documents != null && Model.Documents.Any())
{
    <h4>Supporting Documents</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>File Name</th>
                <th>Uploaded At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in Model.Documents)
            {
                <tr>
                    <td>@doc.FileName</td>
                    <td>@doc.UploadedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-controller="Documents" asp-action="Download" asp-route-id="@doc.DocumentId" class="btn btn-sm btn-primary">Download</a>
                        <a asp-controller="Documents" asp-action="Delete" asp-route-id="@doc.DocumentId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>No supporting documents uploaded.</em></p>
}
