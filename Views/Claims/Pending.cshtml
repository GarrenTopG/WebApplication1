@model IEnumerable<WebApplication1.Models.Claim>
@using Microsoft.AspNetCore.Identity
@inject UserManager<WebApplication1.Models.User> UserManager

<h1>Pending Claims</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by lecturer or notes..." />
        <button class="btn btn-outline-secondary" type="submit">Search</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Submitted At</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalAmount</td>
                <td>@claim.SubmittedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    @* Status badge color based on status *@
                    @{
                        var badgeClass = claim.Status switch
                        {
                            WebApplication1.Models.ClaimStatus.Submitted => "bg-warning text-dark",
                            WebApplication1.Models.ClaimStatus.UnderReview => "bg-primary text-white",
                            WebApplication1.Models.ClaimStatus.SentBack => "bg-secondary text-white",
                            WebApplication1.Models.ClaimStatus.Approved => "bg-success text-white",
                            WebApplication1.Models.ClaimStatus.Rejected => "bg-danger text-white",
                            WebApplication1.Models.ClaimStatus.Processed => "bg-info text-white",
                            _ => "bg-light text-dark"
                        };
                    }
                    <span class="badge @badgeClass">@claim.Status</span>
                </td>
                <td>
                    @* Manager Actions: Approve / Reject if UnderReview *@
                    @if (User.IsInRole("Manager") && claim.Status == WebApplication1.Models.ClaimStatus.UnderReview)
                    {
                        <a asp-action="Approve" asp-route-id="@claim.Id" class="btn btn-success btn-sm">Approve</a>
                        <a asp-action="Reject" asp-route-id="@claim.Id" class="btn btn-danger btn-sm">Reject</a>
                    }

                    @* Coordinator Actions: Set Under Review / Send Back if Submitted *@
                    @if (User.IsInRole("Coordinator") && claim.Status == WebApplication1.Models.ClaimStatus.Submitted)
                    {
                        <a asp-action="SetUnderReview" asp-route-id="@claim.Id" class="btn btn-primary btn-sm">Set Under Review</a>
                        <a asp-action="SendBack" asp-route-id="@claim.Id" class="btn btn-warning btn-sm">Send Back</a>
                    }

                    @* View button always visible *@
                    <a asp-action="Details" asp-route-id="@claim.Id" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>

